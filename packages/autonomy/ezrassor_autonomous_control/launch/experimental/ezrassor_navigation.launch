<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find ezrassor_autonomous_control)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find ezrassor_autonomous_control)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find ezrassor_autonomous_control)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find ezrassor_autonomous_control)/rviz/ezrassor_navigation.rviz"/>
  </group>
</launch>