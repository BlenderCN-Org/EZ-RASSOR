<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />


  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find ezrassor_autonomous_control)/config/costmap_common_config.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find ezrassor_autonomous_control)/config/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find ezrassor_autonomous_control)/config/local_costmap_config.yaml" command="load" />
    <rosparam file="$(find ezrassor_autonomous_control)/config/global_costmap_config.yaml" command="load" />
    <rosparam file="$(find ezrassor_autonomous_control)/config/move_base_config.yaml" command="load" />
    <rosparam file="$(find ezrassor_autonomous_control)/config/dwa_local_planner_config.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
  </node>
</launch>