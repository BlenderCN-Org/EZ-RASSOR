<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Arguments -->
  <arg name="open_rviz" default="true"/>

  <!-- Disparity  -->
  <include file="$(find ezrassor_autonomous_control)/launch/disparity.launch"></include>

  <node pkg="ezrassor_autonomous_control" type="distance_map" name="depth_estimator" ns="/ezrassor"></node>

  <!-- SLAM: Gmapping -->
  <include file="$(find ezrassor_autonomous_control)/launch/ezrassor_gmapping.launch"></include>

  <include file="$(find ezrassor_autonomous_control)/launch/ezrassor_kalman_filter.launch"></include>


  <!-- Open RViz with saved settings -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find ezrassor_autonomous_control)/rviz/ezrassor_gmapping.rviz"/>
  </group>
</launch>