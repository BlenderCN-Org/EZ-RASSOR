<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="id"
       default="1"
       doc="Robot id number."
  />

      <!-- Load the Controllers -->
      <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" ns="ezrassor$(arg id)"
        output="screen"  
        args="left_wheel_back_velocity_controller left_wheel_front_velocity_controller 
        right_wheel_back_velocity_controller right_wheel_front_velocity_controller 
        arm_front_velocity_controller arm_back_velocity_controller 
        drum_front_velocity_controller drum_back_velocity_controller
        joint_state_controller"
      />
      
      <!-- Load joint controller configurations from YAML file to parameter server -->
      <rosparam file="$(find ezrassor_sim_control)/config/sim_control.yaml" command="load"/>

      <!-- Launch Controls --> 
      <node pkg="ezrassor_sim_control" name="arms_driver" type="arms_driver" output="screen" ns="ezrassor$(arg id)"/>
      <node pkg="ezrassor_sim_control" name="wheels_driver" type="wheels_driver" output="screen" ns="ezrassor$(arg id)"/>
      <node pkg="ezrassor_sim_control" name="drums_driver" type="drums_driver" output="screen" ns="ezrassor$(arg id)"/>

</launch>
