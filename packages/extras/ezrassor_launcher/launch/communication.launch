<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Launch a controller node and the request switcher for the EZ-RASSOR.
       Written by Tiger Sachse. -->
  <arg name="use_wired_controls" default="true" doc="Use a wired controller."/>
  <arg name="use_network_controls" default="false" doc="Use a controller on the network."/>
  <include file="$(find ezrassor_request_switch)/launch/request_switch.launch"/>
  <include file="$(find ezrassor_joy_translator)/launch/joy_translator.launch"
           if="$(arg use_wired_controls)"
  />
  <include file="$(find ezrassor_controller_server)/launch/controller_server.launch"
           if="$(arg use_network_controls)"
  />
</launch>
