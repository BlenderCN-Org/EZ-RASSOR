<?xml version="1.0" encoding="UTF-8"?>
<!-- Launch the joy node and its translator. Written by Tiger Sachse and Harrison Black. -->
<launch>

       <rosparam command="load" file="$(find ezrassor_joy_translator)/config/joy_translator.yaml"/>
       <node name="joy_node" pkg="joy" type="joy_node" output="screen"/>
       <node name="joy_translator"
             pkg="ezrassor_joy_translator"
             type="joy_translator"
             output="screen">
             <param name="movement_topic" value="wheel_instructions"/>
             <param name="arms_topic" value="arm_instructions"/>
             <param name="drums_topic" value="drum_instructions"/>
             <param name="max_wheel_speed" value="4"/>
             <param name="max_arm_speed" value="3"/>
             <param name="max_drum_speed" value="3"/>
        </node>
</launch>